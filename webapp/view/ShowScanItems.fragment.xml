<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="No Scan Items"
		title="Scan Items"
		search=".handleSearch"
		cancel=".handleClose"
		items="{
			path : 'oScanModel>/items',
			sorter : {
				path : 'rma',
				descending : false
			}
		}">
		<ColumnListItem vAlign="Middle">
			<cells>
				<Text text="{oScanModel>Rma}" />
                <Text text="{oScanModel>Matnr}" />
                <Text text="{oScanModel>Batch}" />
                <Text text="{oScanModel>ScanQty}" />
                <Button icon="sap-icon://delete" press="onDeleteItem"/>
				
			</cells>
		</ColumnListItem>
		<columns>
        <Column>
				<header>
					<Text text="RMA" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="Material" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="Batch" />
				</header>
			</Column>
            <Column>
				<header>
					<Text text="Quantity" />
				</header>
			</Column>
            <Column>
				<header>
					<Text text="" />
				</header>
			</Column>
			
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>